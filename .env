# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-to-something-random-and-secure
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings (PostgreSQL)
DATABASE_NAME=prompt_platform_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# OR use SQLite for development (easier to start)
USE_SQLITE=True

# CORS Settings (React frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Email Settings (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@promptplatform.com

# AWS S3 Settings (Optional - for production)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Redis (Optional - for caching)
REDIS_URL=redis://127.0.0.1:6379/1